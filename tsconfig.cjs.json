{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES2022",
        "sourceMap": true,
        "inlineSources": true,
        "rootDir": "./src",
        "outDir": "./dist/cjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src"
    ]
}